@model WMN.Models.EventRegistration
@{
    ViewData["Title"] = "Register";
}

<div class="contained">
    <center>
        <p><font size=135%>Join us for our next event! @ViewData["eventName"]</font></p>
        <div class="smallbox">
            <div class="col-md-6 animate-box">
                <h2>Register for event</h2>
                <form asp-action="Register">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="row form-group">
                        <div class="col-md-6">
                            <label asp-for="FirstName" class="control-label"></label>
                            <input asp-for="FirstName" class="form control" placeholder="Your first name" />
                            <span asp-validation-for="FirstName" class="text-danger"></span>
                        </div>
                        <div class="col-md-6">
                            <label asp-for="LastName" class="control-label"></label>
                            <input asp-for="LastName" class="form control" placeholder="Your last name" />
                            <span asp-validation-for="LastName" class="text-danger"></span>
                        </div>
                        <div class="col-md-12">
                            <label asp-for="Email" class="control-label"></label>
                            <input asp-for="Email" class="form control" placeholder="Your email" />
                            <span asp-validation-for="Email" class="text-danger"></span>
                        </div>
                        <div class="col-md-12">
                            <label asp-for="YearOfStudy" class="control-label"></label>
                            <input asp-for="YearOfStudy" class="form control" placeholder="1st,2nd,3rd.." />
                            <span asp-validation-for="YearOfStudy" class="text-danger"></span>
                        </div>
                        <div class="col-md-12">
                            <label asp-for="Program" class="control-label"></label>
                            <input asp-for="Program" class="form control" placeholder="HR, Finance,..." />
                            <span asp-validation-for="Program" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="form-group">
                        <input type="submit" value="Sign up" class="button-submit" />
                    </div>
                    @{
                        if (ViewData["RegistrationtSuccess"] != null && (bool)ViewData["RegistrationtSuccess"])
                        {
                            <div>
                                <span>Successfully registered for the event!</span>
                            </div>
                        }
                    }
                </form>
            </div>
        </div>
</div>
<h2>Questions?</h2>
<center><p> <div><a href="contact.html">Click here to contact our team</a></div></p></center>

